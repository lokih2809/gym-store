datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Category {
  MEN
  WOMEN
  ACCESSORIES
}

model Product {
  id           Int            @id @default(autoincrement())
  name         String
  description  String
  price        Float
  sku          String         @unique
  category     Category
  fit          String
  createdAt    DateTime       @default(now())
  colors       ProductColor[] @relation("ProductColors")
  productSizes ProductSize[]

  orderItems OrderItem[]
}

model ProductColor {
  id        Int      @id @default(autoincrement())
  productId Int
  colorName String
  images    String[]
  product   Product  @relation("ProductColors", fields: [productId], references: [id])

  @@unique([productId, colorName])
}

model ProductSize {
  id        Int     @id @default(autoincrement())
  productId Int
  size      String
  product   Product @relation(fields: [productId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(CUSTOMER)
  address   String?
  orders    Order[]
}

enum Role {
  CUSTOMER
  ADMIN
}

model Order {
  id           Int         @id @default(autoincrement())
  userId       Int
  totalPrice   Float
  addressOrder String
  createdAt    DateTime    @default(now())
  user         User        @relation(fields: [userId], references: [id])
  orderItems   OrderItem[]
  status       Status
}

enum Status {
  PENDING
  PROCESSING
  COMPLETED
  CANCELED
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}
