datasource db {
  provider = "postgresql" // Hoáº·c mysql, sqlite, sqlserver
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int            @id @default(autoincrement())
  name        String
  description String
  price       Decimal        @db.Decimal(10, 2)
  sku         String
  category    String
  fit         String
  images      String[]
  colors      ProductColor[]
  sizes       ProductSize[]
}

model ProductColor {
  id        Int     @id @default(autoincrement())
  productId Int
  colorName String
  colorHex  String
  product   Product @relation(fields: [productId], references: [id])
}

model ProductSize {
  id        Int     @id @default(autoincrement())
  productId Int
  size      String
  product   Product @relation(fields: [productId], references: [id])
}
